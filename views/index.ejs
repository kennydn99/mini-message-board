<html>
  <body>
    <h1><%= title %></h1>
    <a href="/new">Click here to create a new message!</a>
    <% messages.forEach((msg) => { %>
    <div
      style="
        display: flex;
        flex-direction: column;
        border: 2px solid gray;
        margin: 8px 0;
        padding: 8px;
        gap: 8px;
      "
    >
      <span>From: <%= msg.author%></span>
      <span>Date: <%= msg.created_at.toLocaleString()%></span>
      <span>Text: <%= msg.content%></span>
      <a href="/message/<%= msg.id %>">Open</a>
    </div>
    <% }) %>
  </body>
</html>
